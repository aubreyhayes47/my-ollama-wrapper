# Example Environment Configuration

# Copy this file to .env.local for local development
# DO NOT commit .env.local to version control

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_API_TIMEOUT=30000

# Application Configuration
NEXT_PUBLIC_APP_NAME="My Ollama Wrapper"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_DEFAULT_MODEL="llama2:7b"

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# UI Configuration
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_MAX_MESSAGES=1000

# Performance Settings
NEXT_PUBLIC_TYPING_DELAY=50
NEXT_PUBLIC_AUTO_SAVE_INTERVAL=5000

# Feature Flags
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_VOICE_INPUT=false
NEXT_PUBLIC_ENABLE_PLUGINS=false

# Analytics (Optional)
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
# ENABLE_TELEMETRY=false